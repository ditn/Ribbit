<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.adambennett.ribbit.app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:name="com.adambennett.ribbit.app.RibbitApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.adambennett.ribbit.app.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.adambennett.ribbit.app.LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.adambennett.ribbit.app.SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:parentActivityName="com.adambennett.ribbit.app.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.adambennett.ribbit.app.EditFriendsActivity"
            android:label="@string/title_activity_edit_friends"
            android:parentActivityName="com.adambennett.ribbit.app.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
        <activity
            android:name="com.adambennett.ribbit.app.RecipientsActivity"
            android:label="@string/title_activity_recipients"
            android:parentActivityName="com.adambennett.ribbit.app.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
        <activity
            android:name="com.adambennett.ribbit.app.ViewImageActivity"
            android:label="@string/title_activity_view_image"
            android:parentActivityName="com.adambennett.ribbit.app.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
    </application>

</manifest>
